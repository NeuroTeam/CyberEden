<BorderPane minHeight="340.0" minWidth="420.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dekinci.eden.gui.GameController">
   <center>
      <AnchorPane>
         <children>
            <StackPane fx:id="worldPane" minHeight="100.0" minWidth="100.0" prefHeight="100.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <Canvas fx:id="mapCanvas" height="200.0" width="200.0" />
               </children>
            </StackPane>
            <Canvas fx:id="minimapCanvas" height="200.0" width="200.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" />
            <VBox alignment="CENTER" style="-fx-background-color: #ffffff;" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="270.0">
               <children>
                  <Label text="INFO">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Label fx:id="viewCoordinate" text="(x:y)">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Separator />
                  <HBox alignment="CENTER">
                     <children>
                        <Label text="BlockId">
                           <font>
                              <Font size="15.0" />
                           </font>
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Label>
                        <Label fx:id="viewBlockId" text="-1">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER">
                     <children>
                        <Label text="ChunkId">
                           <font>
                              <Font size="15.0" />
                           </font>
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Label>
                        <Label fx:id="viewChunkId" text="-1">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <Separator />
                  <Label text="Entities">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <ListView fx:id="viewEntitiesList" prefHeight="100.0" prefWidth="150.0" />
               </children>
            </VBox>
            <HBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
               <children>
                  <Button fx:id="tickButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="200.0" text="TICK">
                     <HBox.margin>
                        <Insets bottom="10.0" />
                     </HBox.margin>
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
                  <ToggleButton fx:id="autotickButton" ellipsisString="AUTO" mnemonicParsing="false" prefHeight="50.0" prefWidth="50.0" text="AUTO">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" />
                     </HBox.margin>
                  </ToggleButton>
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#toMenu" prefHeight="40.0" prefWidth="40.0" text="â˜°" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="5.0">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
